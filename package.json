{
    "name": "dfx-ams",
    "version": "2.2.0",
    "main": "dist-electron/main/index.js",
    "description": "Access Management System for USF dfx lab",
    "author": "DFX Senior Project",
    "license": "MIT",
    "private": true,
    "debug": {
        "env": {
            "VITE_DEV_SERVER_URL": "http://127.0.0.1:7777/"
        }
    },
    "type": "module",
    "scripts": {
        "dev": "vite",
        "start": "vite --host 0.0.0.0 --port 5173",
        "start:container": "docker run -p 5173:5173 electron_test",
        "start:prod": "vite preview --host 0.0.0.0 --port 5173",
        "build": "tsc && vite build && electron-builder",
        "build:container": "docker build -t electron_test .",
        "preview": "vite preview",
        "pretest": "vite build --mode=test",
        "test": "vitest run"
    },
    "dependencies": {
        "@chakra-ui/react": "^3.5.1",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@tanstack/react-query": "^5.64.2",
        "@types/axios": "^0.14.4",
        "axios": "^1.7.9",
        "electron-updater": "^6.3.9",
        "framer-motion": "^12.0.5",
        "next-themes": "^0.4.4",
        "react-icons": "^5.4.0",
        "react-router-dom": "^7.1.3",
        "vite": "^6.0.11",
        "vite-plugin-electron": "^0.29.0",
        "vite-plugin-electron-renderer": "^0.14.6",
        "vite-tsconfig-paths": "^5.1.4",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3"
    },
    "devDependencies": {
        "@playwright/test": "^1.48.2",
        "@types/react": "^19.0.8",
        "@types/react-dom": "^18.3.1",
        "autoprefixer": "^10.4.20",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "postcss": "^8.4.49",
        "postcss-import": "^16.1.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "tailwindcss": "^3.4.15",
        "typescript": "^5.4.2",
        "vitest": "^3.0.4"
    }
}
